@model Bil372Project.PresentationLayer.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Kayıt Ol";
}

<form asp-action="Register" method="post" class="auth-form needs-validation" novalidate>
    <div class="auth-form-heading text-center">
        <h4>Yeni Hesap Oluştur</h4>
        <p>Sağlıklı yaşam yolculuğuna başlamak için bilgilerini paylaşman yeterli.</p>
    </div>

    <div class="auth-field">
        <label asp-for="FullName" class="form-label">Ad Soyad</label>
        <div class="input-icon">
            <span><i class="bi bi-person"></i></span>
            <input asp-for="FullName" class="form-control form-control-lg" placeholder="Adın ve soyadın" />
        </div>
    </div>

    <div class="auth-field">
        <label asp-for="Email" class="form-label">E-posta</label>
        <div class="input-icon">
            <span><i class="bi bi-envelope"></i></span>
            <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="ornek@mail.com" />
        </div>
    </div>

    <div class="auth-field">
        <label asp-for="Password" class="form-label">Şifre</label>
        <div class="input-icon">
            <span><i class="bi bi-lock"></i></span>
            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="En az 8 karakter" />
        </div>
    </div>

    <div class="auth-field">
        <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
        <div class="input-icon">
            <span><i class="bi bi-check2"></i></span>
            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Şifreni tekrar gir" />
        </div>
    </div>

    <button type="submit" class="btn btn-auth w-100">Kayıt Ol</button>

    <div class="auth-form-footer text-center">
        <span>Zaten hesabın var mı?
            <a asp-action="Login">Giriş yap</a>
        </span>
    </div>
</form>
