@model Bil372Project.PresentationLayer.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Kayıt Ol - Fit0LL";
}

<div class="auth-header text-center">
    <h1 class="auth-title">Hesap Oluştur</h1>
    <p class="auth-subtitle">
        Fit0LL ile kişisel beslenme planına hemen başlayabilirsin.
    </p>
</div>

<form asp-action="Register" method="post" class="auth-form" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger auth-validation"></div>

    <div class="auth-form-group">
        <label asp-for="FullName" class="auth-label">Ad Soyad</label>
        <input asp-for="FullName" class="auth-input" placeholder="Adın ve soyadın" />
        <span asp-validation-for="FullName" class="text-danger auth-validation"></span>
    </div>

    <div class="auth-form-group">
        <label asp-for="Email" class="auth-label">E-posta</label>
        <input asp-for="Email" class="auth-input" type="email" placeholder="ornek@mail.com" />
        <span asp-validation-for="Email" class="text-danger auth-validation"></span>
    </div>

    <div class="auth-form-group">
        <label asp-for="Password" class="auth-label">Şifre</label>
        <input asp-for="Password" type="password" class="auth-input" placeholder="En az 8 karakter" />
        <span asp-validation-for="Password" class="text-danger auth-validation"></span>
    </div>

    <div class="auth-form-group">
        <label asp-for="ConfirmPassword" class="auth-label">Şifre Tekrar</label>
        <input asp-for="ConfirmPassword" type="password" class="auth-input" placeholder="Şifreni tekrar gir" />
        <span asp-validation-for="ConfirmPassword" class="text-danger auth-validation"></span>
    </div>

    <button type="submit" class="auth-submit">Kayıt Ol</button>

    <p class="auth-switch mt-4">
        Zaten hesabın var mı?
        <a asp-action="Login" class="auth-link">Giriş yap</a>
    </p>
</form>
