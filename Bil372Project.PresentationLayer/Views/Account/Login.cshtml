@model Bil372Project.PresentationLayer.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Giriş Yap";
}

<form asp-action="Login" method="post" class="auth-form needs-validation" novalidate>
    <div class="auth-form-heading text-center">
        <h4>Giriş Yap</h4>
        <p>Hesabına giriş yaparak kişisel planına ulaş ve gelişimini takip et.</p>
    </div>

    <div class="auth-field">
        <label asp-for="Email" class="form-label">E-posta</label>
        <div class="input-icon">
            <span><i class="bi bi-envelope"></i></span>
            <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="ornek@mail.com" />
        </div>
    </div>

    <div class="auth-field">
        <label asp-for="Password" class="form-label">Şifre</label>
        <div class="input-icon">
            <span><i class="bi bi-lock"></i></span>
            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="••••••" />
        </div>
    </div>

    <div class="form-check auth-remember">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
    </div>

    <button type="submit" class="btn btn-auth w-100">Giriş Yap</button>

    <div class="auth-form-footer text-center">
        <a href="#" class="link-muted d-block">Şifremi unuttum</a>
        <span>Hesabın yok mu?
            <a asp-action="Register">Kayıt ol</a>
        </span>
    </div>
</form>
