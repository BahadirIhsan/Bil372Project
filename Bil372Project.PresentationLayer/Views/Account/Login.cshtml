@model Bil372Project.PresentationLayer.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Giriş Yap";
}

<h4 class="mb-3 text-center">Giriş Yap</h4>

<form asp-action="Login" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Şifre</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

    <p class="mt-3 text-center">
        Hesabın yok mu?
        <a asp-action="Register">Kayıt ol</a>
    </p>
</form>