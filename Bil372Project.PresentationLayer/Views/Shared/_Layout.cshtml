@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MAYMUNLAR CEHENNEMİ</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Bil372Project.PresentationLayer.styles.css" asp-append-version="true"/>

    <style>
        /* Rainbow palette + helpers */
        :root{
            --rainbow: linear-gradient(90deg,
            #e40303 0%,
            #ff8c00 16.6%,
            #ffed00 33.3%,
            #008026 50%,
            #004dff 66.6%,
            #750787 83.3%,
            #b40086 100%
            );
            --fg-contrast: #ffffff;
            --fg-muted: rgba(255,255,255,.85);
            --shadow: 0 2px 12px rgba(0,0,0,.25);
        }

        /* Animations */
        @@keyframes rainbowShift {
            0%   { background-position: 0% 50%; }
            50%  { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        @@keyframes rainbowPulse {
            0%,100% { filter: brightness(1); }
            50%     { filter: brightness(1.25); }
        }

        .rainbow-animated{
            background-image: var(--rainbow) !important;
            background-size: 400% 400%;
            animation:
                rainbowShift 6s linear infinite,
                rainbowPulse 1.6s ease-in-out infinite;
            color: var(--fg-contrast) !important;
        }

        .rainbow-bar{
            height: 6px;
            background-image: var(--rainbow);
            background-size: 400% 400%;
            animation: rainbowShift 5s linear infinite, rainbowPulse 1.6s ease-in-out infinite;
            box-shadow: var(--shadow);
        }

        /* Navbar link renkleri */
        .navbar.rainbow-animated .navbar-brand,
        .navbar.rainbow-animated .nav-link{
            color: var(--fg-contrast) !important;
            text-shadow: 0 1px 2px rgba(0,0,0,.35);
        }
        .navbar.rainbow-animated .nav-link:hover,
        .navbar.rainbow-animated .nav-link:focus{
            color: #fff !important;
            opacity: .95;
        }
        .navbar.rainbow-animated .navbar-toggler{
            border-color: rgba(255,255,255,.6);
        }
        .navbar.rainbow-animated .navbar-toggler-icon{
            filter: invert(1) brightness(200%);
        }

        /* Sayfa zemini ve içerik kartı */
        body{ background:#0b0b0f; } /* koyu zeminle renkler daha canlı görünür */
        .card-shell{
            background:#fff;
            border-radius:14px;
            box-shadow:0 10px 30px rgba(0,0,0,.25);
            padding:1.25rem;
        }

        /* Footer */
        footer.rainbow-animated{ color: var(--fg-muted); }
        footer.rainbow-animated a{
            color:#fff; text-decoration: underline;
        }

        /* Hareket azaltma tercihi için animasyonları kapat */
        @@media (prefers-reduced-motion: reduce){
        .rainbow-animated,
        .rainbow-bar{
            animation: none !important;
            background-size: auto;
        }
        }
    </style>
</head>
<body>

<header>
    <!-- Üstte ince rainbow şerit -->
    <div class="rainbow-bar"></div>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm rainbow-animated mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                MAYMUNLAR CEHENNEMİ
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 gap-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Maymunlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Maymunlar Gizlilik Sözleşmesi</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3 card-shell">
        @RenderBody()
    </main>
</div>

<footer class="footer mt-4 rainbow-animated">
    <div class="container py-3 d-flex justify-content-between align-items-center">
        <span>&copy; 2025 - Bil372Project.PresentationLayer</span>
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
