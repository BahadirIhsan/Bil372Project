@{
    Layout = null;
    var title = ViewData["Title"] ?? "Fit0LL";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="auth-bg">
<div class="auth-card">
    <div class="row g-4 align-items-center">
        <!-- Sol taraf: logo + kısa açıklama -->
        <div class="col-md-5 d-none d-md-block">
            <span class="auth-logo d-inline-block mb-3">Fit0LL</span>
            <h2 class="h4 mb-3 text-white">Beslenme & yaşam asistanın</h2>
            <p class="text-light-50 mb-0">
                Günlük rutinini, hedefine uygun planlarla daha sağlıklı hale getir.
            </p>
        </div>

        <!-- Sağ taraf: form -->
        <div class="col-12 col-md-7">
            @RenderBody()
        </div>
    </div>
</div>
</body>

</html>
