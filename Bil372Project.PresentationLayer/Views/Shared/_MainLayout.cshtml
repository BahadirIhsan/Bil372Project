@{
    Layout = null;
    var title = ViewData["Title"] ?? "Fit0LL";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
<div class="d-flex">

    <!-- Sol menü -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark flex-column align-items-start p-3"
         style="min-height:100vh; min-width:220px;">
        <a class="navbar-brand mb-4" asp-controller="Home" asp-action="Index">Fit0LL</a>

        <ul class="navbar-nav flex-column w-100">
            <li class="nav-item mb-1">
                <a class="nav-link" asp-controller="Home" asp-action="Values">Değerlerim</a>
            </li>
            <li class="nav-item mb-1">
                <a class="nav-link" asp-controller="Home" asp-action="History">Geçmiş Bilgilerim</a>
            </li>
            <li class="nav-item mb-1">
                <a class="nav-link" asp-controller="Home" asp-action="NewProgram">Yeni Program Al</a>
            </li>
            <li class="nav-item mb-1">
                <a class="nav-link" asp-controller="Home" asp-action="Settings">Ayarlar</a>
            </li>
            <li class="nav-item mt-4">
                <a class="nav-link text-danger" asp-controller="Account" asp-action="Login">Çıkış Yap</a>
                <!-- ileride gerçek Logout yapılacak -->
            </li>
        </ul>
    </nav>

    <!-- İçerik -->
    <div class="flex-grow-1 p-4">
        @RenderBody()
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>