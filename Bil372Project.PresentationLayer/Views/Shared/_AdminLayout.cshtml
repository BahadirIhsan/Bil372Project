@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Paneli";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<div class="app-shell">
    <aside class="app-sidebar">
        <div class="brand-block">
            <img class="brand-logo-image" src="~/images/logo.png" alt="Fit0LL" />
            <p class="mb-0 small text-white-50">Admin Paneli</p>
        </div>
        <nav class="sidebar-nav">
            <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "active" : string.Empty)"
               asp-controller="Admin" asp-action="Index">
                <i class="bi bi-shield-lock"></i> Kullanıcı ve Diyet Listeleri
            </a>
            <div class="logout-link">
                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                </a>
            </div>
        </nav>
    </aside>

    <div class="app-main">
        <header class="main-toolbar">
            <h1 class="mb-2">@title</h1>
        </header>
        <main class="content-wrapper">
            @RenderBody()
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>