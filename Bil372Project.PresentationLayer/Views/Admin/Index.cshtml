@model AdminDashboardViewModel
@{ 
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var adminStatusMessage = TempData["AdminStatusMessage"] as string;
    var adminStatusType = TempData["AdminStatusType"] as string ?? "info";
}

<div class="container-fluid">
    @if (!string.IsNullOrWhiteSpace(adminStatusMessage))
    {
        <div class="alert alert-@adminStatusType alert-dismissible fade show" role="alert">
            @adminStatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-12 col-xl-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="card-title mb-0">Kullanıcı Filtreleme</h5>
                            <small class="text-muted">E-posta ile filtrele ve kullanıcı bilgilerini listele.</small>
                        </div>
                        <span class="badge bg-primary">Max 50 kayıt/sayfa</span>
                    </div>
                    <form method="get" class="row g-3 mb-3 admin-filter-form">
                        <input type="hidden" name="dietUserEmail" value="@Model.DietUserEmail" />
                        <input type="hidden" name="breakfastKeyword" value="@Model.BreakfastKeyword" />
                        <input type="hidden" name="lunchKeyword" value="@Model.LunchKeyword" />
                        <input type="hidden" name="dinnerKeyword" value="@Model.DinnerKeyword" />
                        <input type="hidden" name="snackKeyword" value="@Model.SnackKeyword" />
                        <input type="hidden" name="sortOrder" value="@Model.DietSortOrder" />
                        <input type="hidden" name="dietSearch" value="@(Model.HasDietSearch)" />
                        <input type="hidden" name="dietPage" value="@Model.DietPage" />
                        
                        <div class="col-12">
                            <label class="form-label fw-semibold">E-posta</label>
                            <input type="email" name="userEmail" class="form-control" placeholder="user@example.com" value="@Model.UserEmailFilter" />
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Ad Soyad</label>
                            <input type="text" name="userFullName" class="form-control" placeholder="Örn: Ayşe Yılmaz" value="@Model.UserFullNameFilter" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Şehir</label>
                            <input type="text" name="userCity" class="form-control" placeholder="Örn: Ankara" value="@Model.UserCityFilter" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Telefon</label>
                            <input type="text" name="userPhone" class="form-control" placeholder="Örn: +90 555 555 55 55" value="@Model.UserPhoneFilter" />
                        </div>
                        
                        <div class="col-12 d-flex gap-2">
                            <button type="submit" name="userSearch" value="true" class="btn btn-success">
                                <i class="bi bi-search"></i> Filtrele
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Temizle</a>
                        </div>
                    </form>
                    
                    @if (Model.UserSearchApplied)
                    {
                        <div class="active-filters mb-3">
                            <span class="text-muted me-2">Aktif filtreler:</span>
                            @if (!string.IsNullOrWhiteSpace(Model.UserEmailFilter))
                            {
                                <span class="filter-chip"><i class="bi bi-envelope"></i> @Model.UserEmailFilter</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.UserFullNameFilter))
                            {
                                <span class="filter-chip"><i class="bi bi-person"></i> @Model.UserFullNameFilter</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.UserCityFilter))
                            {
                                <span class="filter-chip"><i class="bi bi-geo-alt"></i> @Model.UserCityFilter</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.UserPhoneFilter))
                            {
                                <span class="filter-chip"><i class="bi bi-telephone"></i> @Model.UserPhoneFilter</span>
                            }
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>E-posta</th>
                                    <th>Telefon</th>
                                    <th>Şehir/Ülke</th>
                                    <th>Admin</th>
                                    <th>İşlem</th>
                                    <th>Güncellendi</th>
                                </tr>
                            </thead>
                            <tbody>
                            
                            @if (Model.Users.Items.Any())
                            {
                                var rowNumber = 1;
                                foreach (var user in Model.Users.Items)
                                {
                                    <tr>
                                        <td class="text-muted">@rowNumber</td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>@(string.IsNullOrWhiteSpace(user.PhoneNumber) ? "-" : user.PhoneNumber)</td>
                                        <td>@($"{user.City ?? "-"} / {user.Country ?? "-"}")</td>
                                        <td>
                                            @if (user.IsAdmin)
                                            {
                                                <span class="badge bg-danger">Admin</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Kullanıcı</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!user.IsAdmin)
                                            {
                                                <form asp-action="GrantAdmin" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="userEmail" value="@Model.UserEmailFilter" />
                                                    <input type="hidden" name="userFullName" value="@Model.UserFullNameFilter" />
                                                    <input type="hidden" name="userCity" value="@Model.UserCityFilter" />
                                                    <input type="hidden" name="userPhone" value="@Model.UserPhoneFilter" />
                                                    <input type="hidden" name="userSearch" value="@(Model.UserSearchApplied)" />
                                                    <input type="hidden" name="userPage" value="@Model.UserPage" />
                                                    <input type="hidden" name="dietUserEmail" value="@Model.DietUserEmail" />
                                                    <input type="hidden" name="breakfastKeyword" value="@Model.BreakfastKeyword" />
                                                    <input type="hidden" name="lunchKeyword" value="@Model.LunchKeyword" />
                                                    <input type="hidden" name="dinnerKeyword" value="@Model.DinnerKeyword" />
                                                    <input type="hidden" name="snackKeyword" value="@Model.SnackKeyword" />
                                                    <input type="hidden" name="sortOrder" value="@Model.DietSortOrder" />
                                                    <input type="hidden" name="dietSearch" value="@(Model.HasDietSearch)" />
                                                    <input type="hidden" name="dietPage" value="@Model.DietPage" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Bu kullanıcıya admin yetkisi vermek istediğinize emin misiniz?');">
                                                        <i class="bi bi-person-gear"></i> Admin Yap
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@user.UpdatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                    rowNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">Kayıt bulunamadı.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Users.TotalPages > 1)
                    {
                        <nav aria-label="Kullanıcı sayfaları" class="mt-2">
                            <ul class="pagination pagination-sm mb-0">
                                @for (int page = 1; page <= Model.Users.TotalPages; page++)
                                {
                                    <li class='page-item @(page == Model.Users.Page ? "active" : string.Empty)'>
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-userPage="@(page)"
                                           asp-route-userEmail="@(Model.UserEmailFilter)"
                                           asp-route-userFullName="@(Model.UserFullNameFilter)"
                                           asp-route-userCity="@(Model.UserCityFilter)"
                                           asp-route-userPhone="@(Model.UserPhoneFilter)"
                                           asp-route-userSearch="true"
                                           asp-route-dietUserEmail="@(Model.DietUserEmail)"
                                           asp-route-breakfastKeyword="@(Model.BreakfastKeyword)"
                                           asp-route-lunchKeyword="@(Model.LunchKeyword)"
                                           asp-route-dinnerKeyword="@(Model.DinnerKeyword)"
                                           asp-route-snackKeyword="@(Model.SnackKeyword)"
                                           asp-route-sortOrder="@(Model.DietSortOrder)"
                                           asp-route-dietPage="@(Model.DietPage)"
                                           asp-route-dietSearch="@(Model.HasDietSearch)">@(page)</a>                                    
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="card-title mb-0">Diyet Listeleri</h5>
                            <small class="text-muted">E-posta ve öğün anahtar kelimeleri ile filtreleyin.</small>
                        </div>
                        <span class="badge bg-primary">Max 50 kayıt/sayfa</span>
                    </div>

                    <form method="get" class="row g-2 mb-3">
                        <input type="hidden" name="userEmail" value="@Model.UserEmailFilter" />
                        <input type="hidden" name="userFullName" value="@Model.UserFullNameFilter" />
                        <input type="hidden" name="userCity" value="@Model.UserCityFilter" />
                        <input type="hidden" name="userPhone" value="@Model.UserPhoneFilter" />
                        <input type="hidden" name="userSearch" value="@(Model.UserSearchApplied)" />
                        <input type="hidden" name="userPage" value="@Model.UserPage" />
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Kullanıcı E-postası (opsiyonel)</label>
                            <input type="email" name="dietUserEmail" class="form-control" placeholder="user@example.com" value="@Model.DietUserEmail" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Kahvaltı Anahtar Kelimesi</label>
                            <input type="text" name="breakfastKeyword" class="form-control" placeholder="Örn: fruit" value="@Model.BreakfastKeyword" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Öğle Yemeği Anahtar Kelimesi</label>
                            <input type="text" name="lunchKeyword" class="form-control" placeholder="Örn: chicken" value="@Model.LunchKeyword" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Akşam Yemeği Anahtar Kelimesi</label>
                            <input type="text" name="dinnerKeyword" class="form-control" placeholder="Örn: salad" value="@Model.DinnerKeyword" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Ara Öğün Anahtar Kelimesi</label>
                            <input type="text" name="snackKeyword" class="form-control" placeholder="Örn: yogurt" value="@Model.SnackKeyword" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Zamana Göre Sıralama</label>
                            <select name="sortOrder" class="form-select">
                                <option value="desc" selected="@(Model.DietSortOrder == "desc" ? "selected" : null)">Yeni - Eski</option>
                                <option value="asc"  selected="@(Model.DietSortOrder == "asc"  ? "selected" : null)">Eski - Yeni</option>
                            </select>
                        </div>
                        <div class="col-12 d-flex gap-2">
                            <button type="submit" name="dietSearch" value="true" class="btn btn-success">
                                <i class="bi bi-filter"></i> Diyetleri Filtrele
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Temizle</a>
                        </div>
                    </form>
                    
                    @if (Model.HasDietSearch)
                    {
                        <div class="active-filters mb-3">
                            <span class="text-muted me-2">Aktif filtreler:</span>
                            @if (!string.IsNullOrWhiteSpace(Model.DietUserEmail))
                            {
                                <span class="filter-chip"><i class="bi bi-envelope"></i> @Model.DietUserEmail</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.BreakfastKeyword))
                            {
                                <span class="filter-chip"><i class="bi bi-person"></i> @Model.BreakfastKeyword</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.LunchKeyword))
                            {
                                <span class="filter-chip"><i class="bi bi-geo-alt"></i> @Model.LunchKeyword</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.DinnerKeyword))
                            {
                                <span class="filter-chip"><i class="bi bi-telephone"></i> @Model.DinnerKeyword</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.SnackKeyword))
                            {
                                <span class="filter-chip"><i class="bi bi-telephone"></i> @Model.SnackKeyword</span>
                            }
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>E-posta</th>
                                    <th>Kahvaltı</th>
                                    <th>Öğle</th>
                                    <th>Akşam</th>
                                    <th>Ara Öğün</th>
                                    <th>Versiyon</th>
                                    <th>Üretim</th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (!Model.HasDietSearch)
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted">Lütfen filtreleri girip diyet araması yapın.</td>
                                </tr>
                            }
                            else if (Model.DietPlans.Items.Any())
                            {
                                var rowNumber = 1;
                                foreach (var plan in Model.DietPlans.Items)
                                {
                                    <tr>
                                        <td class="text-muted">@rowNumber</td>
                                        <td>@plan.UserFullName</td>
                                        <td>@plan.UserEmail</td>
                                        <td>@plan.Breakfast</td>
                                        <td>@plan.Lunch</td>
                                        <td>@plan.Dinner</td>
                                        <td>@plan.Snack</td>
                                        <td>@(string.IsNullOrWhiteSpace(plan.ModelVersion) ? "-" : plan.ModelVersion)</td>
                                        <td>@plan.GeneratedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                    rowNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted">Diyet listesi bulunamadı.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.DietPlans.TotalPages > 1)
                    {
                        <nav aria-label="Diyet sayfaları" class="mt-2">
                            <ul class="pagination pagination-sm mb-0">
                                @for (int page = 1; page <= Model.DietPlans.TotalPages; page++)
                                {
                                    <li class='page-item @(page == Model.DietPlans.Page ? "active" : string.Empty)'>
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-dietPage="@(page)"
                                           asp-route-userEmail="@(Model.UserEmailFilter)"
                                           asp-route-userFullName="@(Model.UserFullNameFilter)"
                                           asp-route-userCity="@(Model.UserCityFilter)"
                                           asp-route-userPhone="@(Model.UserPhoneFilter)"
                                           asp-route-userSearch="@(Model.UserSearchApplied)"
                                           asp-route-userPage="@(Model.UserPage)"
                                           asp-route-dietUserEmail="@(Model.DietUserEmail)"
                                           asp-route-breakfastKeyword="@(Model.BreakfastKeyword)"
                                           asp-route-lunchKeyword="@(Model.LunchKeyword)"
                                           asp-route-dinnerKeyword="@(Model.DinnerKeyword)"
                                           asp-route-snackKeyword="@(Model.SnackKeyword)"
                                           asp-route-sortOrder="@(Model.DietSortOrder)"
                                           asp-route-dietSearch="true">@(page)</a>                                        
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>