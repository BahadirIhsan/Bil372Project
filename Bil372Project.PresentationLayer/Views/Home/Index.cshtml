@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">YİĞİT KILINÇ, ATAKAN EKİZ, ÖMER MUZTÜRK</h1>
    <p>
        TOP SECRET 
            VİDEO İÇİN TIKLA
    </p>

    <!-- Yan yana 3 resim -->
    <div style="display:flex; justify-content:center; gap:20px; margin-top:20px;">
        <img src="~/images/Ekran Resmi 2025-10-01 20.30.39.png" alt="Foto 1" style="max-width:200px;" />
        <img src="~/images/Ekran Resmi 2025-10-01 20.13.09.png" alt="Foto 1" style="max-width:200px;"/>
        <img src="~/images/Ekran Resmi 2025-10-01 20.17.33.png" alt="Foto 2" style="max-width:200px;"/>
        <img src="~/images/Ekran Resmi 2025-10-01 20.17.44.png" alt="Foto 3" style="max-width:200px;"/>
        <img src="~/images/Ekran Resmi 2025-10-01 20.30.59.png" alt="Foto 1" style="max-width:200px;" />
        

    </div>
    
    <!-- Müzik Player + Buton -->
    <audio id="bgmusic" preload="auto" loop 
           src="@(Url.Content("~/music/hayirli-gunler.mp3"))">
        Tarayıcınız ses dosyasını desteklemiyor.
    </audio>

    <div class="mt-3">
        <button id="musicToggle" type="button" class="btn btn-primary">
            🔊 Müzik Aç
        </button>
    </div>
</div>

@section Scripts {
    <script>
  document.addEventListener('DOMContentLoaded', () => {
    const a = document.getElementById('bgmusic');
    const btn = document.getElementById('musicToggle');

    // Varsayılan: sessiz başlatmayı dene
    a.muted = true;
    a.play().catch(() => { console.log("Autoplay engellendi"); });

    btn.addEventListener('click', () => {
      a.muted = !a.muted;
      if (!a.muted) {
        a.play().catch(e => console.warn("Play failed", e));
        btn.textContent = "🔇 Müzik Kapat";
      } else {
        btn.textContent = "🔊 Müzik Aç";
      }
    });
  });
</script>
}