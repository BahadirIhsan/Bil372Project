@model Bil372Project.PresentationLayer.Models.DietOptionViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Önerilen Programdan Seç";
}

<div class="modal-backdrop fade show"></div>

<div class="modal-dialog modal-xl modal-dialog-centered" style="z-index:1050; position:relative;">
    <div class="modal-content glass-card p-4">
        <div class="modal-header border-0">
            <h4 class="modal-title fw-bold">Sana özel önerilen öğünleri seç</h4>
        </div>
        <div class="modal-body">
            <p class="text-muted mb-4">
                Fit0LL, profilini analiz ederek her öğün için en uygun 3 seçeneği sundu.
                Aşağıdan her öğün için bir tanesini seçebilirsin. Seçimin, geçmişine kaydedilecek.
            </p>

            <form asp-action="ConfirmDietOptions" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserMeasureId" />

                <div class="row g-4">
                    <!-- BREAKFAST -->
                    <div class="col-md-6">
                        <h5 class="section-title mb-3">Breakfast</h5>
                        <div class="d-flex flex-column gap-3">
                            @for (int i = 0; i < Model.BreakfastOptions.Count; i++)
                            {
                                var opt = Model.BreakfastOptions[i];
                                <label class="card border-0 shadow-sm p-3 rounded-4 option-card">
                                    <div class="d-flex align-items-center">
                                        <input type="radio"
                                               asp-for="SelectedBreakfast"
                                               value="@opt.Label"
                                               class="form-check-input me-3" />
                                        <div>
                                            <div class="fw-semibold">@opt.Label</div>
                                            <div class="small text-muted">
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            }
                        </div>
                        <span asp-validation-for="SelectedBreakfast" class="text-danger small"></span>
                    </div>

                    <!-- LUNCH -->
                    <div class="col-md-6">
                        <h5 class="section-title mb-3">Lunch</h5>
                        <div class="d-flex flex-column gap-3">
                            @for (int i = 0; i < Model.LunchOptions.Count; i++)
                            {
                                var opt = Model.LunchOptions[i];
                                <label class="card border-0 shadow-sm p-3 rounded-4 option-card">
                                    <div class="d-flex align-items-center">
                                        <input type="radio"
                                               asp-for="SelectedLunch"
                                               value="@opt.Label"
                                               class="form-check-input me-3" />
                                        <div>
                                            <div class="fw-semibold">@opt.Label</div>
                                            <div class="small text-muted">
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            }
                        </div>
                        <span asp-validation-for="SelectedLunch" class="text-danger small"></span>
                    </div>

                    <!-- DINNER -->
                    <div class="col-md-6 mt-4">
                        <h5 class="section-title mb-3">Dinner</h5>
                        <div class="d-flex flex-column gap-3">
                            @for (int i = 0; i < Model.DinnerOptions.Count; i++)
                            {
                                var opt = Model.DinnerOptions[i];
                                <label class="card border-0 shadow-sm p-3 rounded-4 option-card">
                                    <div class="d-flex align-items-center">
                                        <input type="radio"
                                               asp-for="SelectedDinner"
                                               value="@opt.Label"
                                               class="form-check-input me-3" />
                                        <div>
                                            <div class="fw-semibold">@opt.Label</div>
                                            <div class="small text-muted">
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            }
                        </div>
                        <span asp-validation-for="SelectedDinner" class="text-danger small"></span>
                    </div>

                    <!-- SNACK -->
                    <div class="col-md-6 mt-4">
                        <h5 class="section-title mb-3">Snack</h5>
                        <div class="d-flex flex-column gap-3">
                            @for (int i = 0; i < Model.SnackOptions.Count; i++)
                            {
                                var opt = Model.SnackOptions[i];
                                <label class="card border-0 shadow-sm p-3 rounded-4 option-card">
                                    <div class="d-flex align-items-center">
                                        <input type="radio"
                                               asp-for="SelectedSnack"
                                               value="@opt.Label"
                                               class="form-check-input me-3" />
                                        <div>
                                            <div class="fw-semibold">@opt.Label</div>
                                            <div class="small text-muted">
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            }
                        </div>
                        <span asp-validation-for="SelectedSnack" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-3">
                    <a asp-action="NewProgram" class="btn btn-outline-secondary">
                        Vazgeç
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        Seçimleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
