@model Bil372Project.PresentationLayer.Models.DietHistoryViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Geçmiş Bilgilerim";
}

<div class="row g-4">
    <div class="col-xl-7">
        <div class="glass-card h-100">
            <h3 class="section-title">Ölçüm & Program Geçmişi</h3>

            @if (Model.Plans == null || !Model.Plans.Any())
            {
                <p class="text-muted">Henüz oluşturulmuş bir diyet programın bulunmuyor.</p>
            }
            else
            {
                <div class="timeline">
                    @foreach (var p in Model.Plans.OrderByDescending(x => x.GeneratedAt))
                    {
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div class="timeline-card">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong>@p.GeneratedAt.ToLocalTime().ToString("g")</strong>
                                    <span class="badge-soft">Diyet Programı</span>
                                </div>
                                <p class="text-muted mb-2 small">
                                    Bu tarihte senin için oluşturulan beslenme planının özeti aşağıda.
                                </p>
                                <div class="row g-3 small text-muted">
                                    <div class="col-sm-6">
                                        <span class="fw-semibold text-dark d-block mb-1">Kahvaltı</span>
                                        <span>@p.Breakfast</span>
                                    </div>
                                    <div class="col-sm-6">
                                        <span class="fw-semibold text-dark d-block mb-1">Öğle</span>
                                        <span>@p.Lunch</span>
                                    </div>
                                    <div class="col-sm-6 mt-3">
                                        <span class="fw-semibold text-dark d-block mb-1">Akşam</span>
                                        <span>@p.Dinner</span>
                                    </div>
                                    <div class="col-sm-6 mt-3">
                                        <span class="fw-semibold text-dark d-block mb-1">Ara Öğün</span>
                                        <span>@p.Snack</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="col-xl-5">
        <div class="glass-card mb-4">
            <h4 class="section-title">Kilo Değişim Analizi</h4>
            <p class="text-muted small">Aşağıdaki grafik son haftalardaki ilerlemeni temsil eder. Gerçek veriler yakında eklenecek.</p>
            <div class="bg-white rounded-4 p-4 shadow-sm">
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar bg-gradient" role="progressbar" style="width: 72%; background: linear-gradient(135deg,#30d0d0,#0575e6);"></div>
                </div>
                <div class="d-flex justify-content-between text-muted small">
                    <span>Ocak</span>
                    <span>Şubat</span>
                    <span>Mart</span>
                </div>
            </div>
        </div>

        <div class="glass-card">
            <h4 class="section-title">Öne Çıkan Başarılar</h4>
            <ul class="list-unstyled mb-0">
                <li class="d-flex gap-3 mb-3 align-items-start">
                    <span class="text-success"><i class="bi bi-trophy fs-4"></i></span>
                    <div>
                        <h6 class="mb-1">Hedeflerine yaklaşıyorsun</h6>
                        <p class="text-muted small mb-0">Programlarını düzenli takip ettikçe ilerleme grafiğin daha da netleşecek.</p>
                    </div>
                </li>
                <li class="d-flex gap-3 mb-3 align-items-start">
                    <span class="text-warning"><i class="bi bi-lightning-charge fs-4"></i></span>
                    <div>
                        <h6 class="mb-1">Aktivite serisi</h6>
                        <p class="text-muted small mb-0">Düzenli hareket, programlarının etkisini önemli ölçüde artırır.</p>
                    </div>
                </li>
                <li class="d-flex gap-3 align-items-start">
                    <span class="text-info"><i class="bi bi-droplet-half fs-4"></i></span>
                    <div>
                        <h6 class="mb-1">Su hedefi</h6>
                        <p class="text-muted small mb-0">Yeterli su tüketimi, hem performansını hem de metabolizmanı destekler.</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
